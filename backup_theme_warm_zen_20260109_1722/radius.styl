/*************************
***********radius*********
**************************/

/* 侧边圆角 */
header.header, .sidebar-inner {
  border-radius: 12px;
}

.site-brand-container {
  border-radius: 12px 12px 0 0;

  +mobile() {
    border-radius: 0 0 12px 12px;
  }
}

/* 二级导航菜单 */
.sub-menu {
  border-radius: 12px !important;
}

/* 文章卡片 */
.post-block {
  border-radius: 12px !important;
  box-shadow: 0 4px 4px rgba(6, 64, 145, 0.2) !important;
}

/* 文章与页面标题 */
.posts-expand .post-title {
  font-size: 2.1em;
  font-weight: bold;
  +mobile() {
    margin-top: 10px;
  }
}

/* 普通链接卡片 */
.post-body .link-grid .link-grid-container {
  border-radius: 12px;
}
