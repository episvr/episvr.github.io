/* LYRICS AT THE END OF POST */
/* Custom styling for the lyrics container */
.lyrics-container {
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('https://img.xjh.me/random_img.php?type=bg&ctype=nature&return=302'), linear-gradient(90deg, #000000, #0000005f);
  background-position: right;
  background-blend-mode: overlay;
  position: relative;
  border-radius: 18px;
  height: 400px;
  width: 95%;
  padding: 20px;
  overflow-y: auto;
  box-sizing: border-box;
}

@media (max-width: 768px) {
  .lyrics-container {
    height: 70vh;
    padding: 15px;
    border-radius: 12px;
  }

  .song-title {
    font-size: 20px;
  }

  .lyric-item {
    font-size: 15px;
    line-height: 1.8;
    padding: 1px 8px;
  }

  .translated-lyric {
    font-size: 10px;
  }
}

.lyrics-container::-webkit-scrollbar {
  width: 10px;
}

.song-info {
  text-align: left;
  margin-bottom: 20px;
}

.song-title {
  font-family: var(--font-art);
  color: var(--theme-primary);
  font-size: 38px;
  margin-bottom: 10px;
}

.lyric-item {
  font-size: 28px;
  line-height: 2;
  text-align: left;
  opacity: 0.5;
  transition: opacity 0.4s ease-out, transform 0.3s ease-out;
  margin-bottom: 10px;
  position: relative;
  padding: 2px 10px;
  color: var(--theme-bg-light);
}

.lyric-item.active {
  opacity: 1;
}

.lyric-item:hover {
  opacity: 0.7;
  color: var(--theme-secondary);
}

.original-lyric {
  font-family: var(--font-art);
}

.translated-lyric {
  font-family: var(--font-art);
  margin-top: -5px;
  font-size: 18px;
  font-weight: 300;
}