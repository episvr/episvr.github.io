@import "fonts.styl"
@import "lyrics.styl";
@import "links.styl"
@import "fav.styl"
@import "tagcloud.styl"
@import "radius.styl"
@import "archive.styl"
@import "index_layout.styl"


:root {
  --waline-theme-color: var(--theme-primary) !important;
}


/*toc*/
.post-toc ol
  font-size 15px



/* 仅在归档页启用悬停上浮效果*/
.archive .post-block:hover {
  box-shadow: var(--theme-shadow-neon);
  background: var(--theme-bg-white);
}

/* 标题样式重构 - 移除渐变，回归衬线雅致 */
.post-title-link {
  color: var(--theme-text-main) !important;
  font-family: var(--font-art, serif);
  font-weight: 700;
  position: relative;
  display: inline-block;
  text-decoration: none;
  background: none !important;
  -webkit-background-clip: unset !important;
}

/* 标题下划线动画 */
.post-title-link::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  bottom: -2px;
  left: 0;
  background-color: var(--theme-accent);
  visibility: hidden;
  transform: scaleX(0);
  transition: transform 0.5s ease-in-out;
  transform-origin: center;
}

.post-title-link:hover::after {
  visibility: visible;
  transform: scaleX(1);
}

/* Blockquote Style - Enhanced Sense / Classic Touch */
blockquote {
  border-left: 5px solid var(--theme-primary);
  background: linear-gradient(to right, var(--theme-bg-light), var(--theme-quote-bg-end)); /* 微暖渐变 */
  color: var(--theme-text-main);
  border-radius: 0 12px 12px 0; /* 左侧硬朗，右侧圆润 */
  box-shadow: var(--theme-shadow-soft);
  margin: 25px 0;

  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  
  /* 字体优化 */
  font-family: var(--font-art);
  font-size: 1.05em;
  line-height: 1.8;
  font-style: italic; /* 斜体衬线，增加文学感 */
}

/* 装饰性巨型引号水印 */
blockquote::before {
  content: '\201C'; /* 左双引号 */
  position: absolute;
  top: -15px;
  left: 10px;
  font-family: 'Times New Roman', serif; /* 经典衬线体引号 */
  font-size: 5rem;
  color: var(--theme-primary);
  opacity: 0.45; /* 极淡的水印质感 */
  line-height: 1;
  pointer-events: none;
}

/* Global Selection Color */
::selection {
  background: var(--theme-primary);
  color: #fff;
}
